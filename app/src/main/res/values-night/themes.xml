<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for Night Mode. -->
    <style name="Theme.EnglishLearningApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Dark Theme for Categories (Night Mode) -->
    <style name="Theme.EnglishLearningApp.DarkCategories" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_dark_variant</item>
        <item name="colorOnPrimary">@color/on_primary_dark</item>
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="colorSecondaryVariant">@color/secondary_light_variant</item>
        <item name="colorOnSecondary">@color/on_secondary_light</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>
        <item name="android:textColorPrimary">@color/on_surface_dark</item>
        <item name="android:textColorSecondary">#BDBDBD</item>
    </style>

    <!-- Light Green Theme for Words (Night Mode - can be similar to Day) -->
    <style name="Theme.EnglishLearningApp.LightGreenWords" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_light_green</item>
        <item name="colorPrimaryVariant">@color/primary_light_green_variant</item>
        <item name="colorOnPrimary">@color/on_primary_light_green</item>
        <item name="colorSecondary">@color/secondary_light_green</item>
        <item name="colorSecondaryVariant">@color/secondary_light_green_variant</item>
        <item name="colorOnSecondary">@color/on_secondary_light_green</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:colorBackground">@color/background_light_green</item>
        <item name="colorSurface">@color/surface_light_green</item>
        <item name="colorOnSurface">@color/on_surface_light_green</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>
</resources>